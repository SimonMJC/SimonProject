<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="287dp"
            android:layout_height="71dp"
            android:text="How to Use?"
            android:textColor="#0b352a"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/engButton"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:background="#00ff0000"
            android:scaleType="centerInside"
            android:src="@drawable/korean"
            android:onClick="kClick"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#043c2d"
        android:text="1. Active your GPS service."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#043c2d"
        android:text="2. Touch the Screen over the How To Use. "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#043c2d"
        android:text="3. Touch the Display labeled 'WIT' "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#043c2d"
        android:text="4. PinkMarker: Current Location | GreenMarker: Toilet Location"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#043c2d"
        android:text="5. Enjoy the toilet Marked through the map."/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/gomain"
            android:onClick="gmeClick"
            />
    </LinearLayout>


</LinearLayout>